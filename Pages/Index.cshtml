@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Upload your files here</h1>

    <form method="post" enctype="multipart/form-data">
        <input type="file" id="file" name="file" accept=".pdf,.epub,.jpg,.jpeg,.png,.mp3,.docx,.txt" />
        <label for="file" class="custom-upload-btn">Choose File</label>
        <span id="file-name" style="margin-left:10px;"></span>
        <button type="submit">Upload</button>
    </form>

    @if (TempData["UploadMessage"] != null)
    {
        <p>@TempData["UploadMessage"]</p>
    }
</div>

<hr />

<h2>PDFs</h2>
@if (Model.PdfFiles.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>File</th>
                <th>Size</th>
                <th>Uploaded</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var f in Model.PdfFiles)
        {
            <tr>
                <td>@f.FileName</td>
                <td>@(f.FileSize / 1024) KB</td>
                <td>@f.UploadedAt.ToLocalTime()</td>
                <td>
                    <div class="action-buttons-vertical">
                        <a class="btn btn-primary" href="/ViewFile/@f.Id">View</a>
                        <form method="post" asp-page-handler="Delete" asp-route-id="@f.Id">
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </div>
                </td>
            </tr>
        }
        </tbody>
    </table>
}
else
{
    <p>No PDFs uploaded yet.</p>
}

